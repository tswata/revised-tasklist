  <h1>完了タスク一覧</h1>

<% if @tasks.any? %>
<table class="table table-striped">
    <thead>
        <tr　class=text-center>
            <th>id</th>
            <th>タスク</th>
            <th>完了日</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.content %> </td>
        <td><%= task.updated_at.getlocal("+09:00").to_date %></td>
        <td><%= link_to "編集", edit_task_path(task) %></td>
        <td><%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除してよろしいですか？"} %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    <div>
        <%= paginate @tasks %>
    </div>
<% end %>

  